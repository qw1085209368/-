  .login-item{
    text-align: center;
  }
  
  .login-item-img{
    width:  543rpx;
    height: 128rpx;
    margin-top: 180rpx;
    margin-bottom:30rpx;
  }
  .login-logo{
        color: #fff;
            font-size: 50rpx;
  }
